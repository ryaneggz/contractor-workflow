# =============================================================================
# Contractor Workflow Automation - Environment Variables
# =============================================================================
# Copy this file to .env and replace all YOUR_* placeholders with real values.
# NEVER commit your .env file -- it is gitignored by default.
# =============================================================================

# --- DigitalOcean / Server ---
# Public IP address of your DigitalOcean Droplet running OpenClaw
DROPLET_IP=YOUR_DROPLET_IP

# --- LLM Provider ---
# API key from https://console.anthropic.com â€” used by OpenClaw for all LLM calls
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY

# --- OpenClaw Gateway ---
# Authentication token for the OpenClaw gateway API (generated during Droplet setup)
GATEWAY_TOKEN=YOUR_GATEWAY_TOKEN

# --- Google Workspace ---
# Gmail address used for monitoring client emails and sending invoices
GMAIL_ADDRESS=YOUR_GMAIL_ADDRESS
# Google Cloud Console project ID (houses OAuth credentials and enabled APIs)
GOOGLE_CLOUD_PROJECT_ID=YOUR_GOOGLE_CLOUD_PROJECT_ID
# OAuth 2.0 client ID from Google Cloud Console (Desktop app type)
OAUTH_CLIENT_ID=YOUR_OAUTH_CLIENT_ID
# OAuth 2.0 client secret from Google Cloud Console
OAUTH_CLIENT_SECRET=YOUR_OAUTH_CLIENT_SECRET
# Google Sheets spreadsheet ID for the project tracking sheet (from the sheet URL)
SHEET_ID=YOUR_SHEET_ID

# --- WhatsApp Numbers (E.164 format, e.g., +15551234567) ---
# Contractor's personal phone number for receiving briefings and alerts
CONTRACTOR_PHONE=YOUR_PHONE_NUMBER
# Crew member phone numbers for job offers, check-ins, and receipt submissions
CREW_MEMBER_1_PHONE=YOUR_CREW_MEMBER_1_PHONE
CREW_MEMBER_2_PHONE=YOUR_CREW_MEMBER_2_PHONE
CREW_MEMBER_3_PHONE=YOUR_CREW_MEMBER_3_PHONE
# Client phone number for project communication
CLIENT_PHONE=YOUR_CLIENT_PHONE

# --- Contractor Identity ---
# Your full name as it appears on invoices and messages
CONTRACTOR_NAME=YOUR_NAME
# Your registered business name for invoices and professional communication
BUSINESS_NAME=YOUR_BUSINESS_NAME

# --- Timezone (IANA format) ---
# Timezone for cron job scheduling and timestamps
# Examples: America/New_York, America/Chicago, America/Denver, America/Los_Angeles
TIMEZONE=YOUR_TIMEZONE
